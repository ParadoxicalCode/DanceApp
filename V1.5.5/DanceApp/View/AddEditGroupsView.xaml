<Window x:Class="DanceApp.View.AddEditGroupsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DanceApp.View" mc:Ignorable="d"
        Height="720" Width="610" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Title="Группы          * Обязательные для заполнения поля">
    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="5" Margin="5,0,5,5">
        <Grid Margin="12 4 12 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="136"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="226"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="114"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="*Тип выступления" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="*Категория 1" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="Категория 2" VerticalAlignment="Center"/>

                <ComboBox Grid.Row="1" Height="30" x:Name="PerformanceTypeCB" Style="{StaticResource ComboBoxFlatStyle}" SelectionChanged="PerformanceTypeCB_SelectionChanged" Margin="0 0 15 0">
                    <ComboBoxItem Content="Пара"/>
                    <ComboBoxItem Content="Соло"/>
                </ComboBox>
                <ComboBox Grid.Row="1" Grid.Column="1" Height="30" x:Name="Category1CB" Style="{StaticResource ComboBoxFlatStyle}" SelectionChanged="Category1CB_SelectionChanged" Margin="0 0 15 0"/>
                <ComboBox Grid.Row="1" Grid.Column="2" Height="30" x:Name="Category2CB" Style="{StaticResource ComboBoxFlatStyle}" Width="95" HorizontalAlignment="Left"/>
            </Grid>

            <TextBlock Grid.Row="1" Text="Спортивная дисциплина" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="2" Height="30" x:Name="SportsDisciplineCB" Style="{StaticResource ComboBoxFlatStyle}" SelectionChanged="SportsDisciplineCB_SelectionChanged" Width="214" HorizontalAlignment="Left">
                <ComboBoxItem Content="Европейская программа"/>
                <ComboBoxItem Content="Латиноамериканская программа"/>
            </ComboBox>

            <TextBlock Grid.Row="3" Text="*Программа" VerticalAlignment="Center"/>
            <DataGrid x:Name="DancesDG" Grid.Row="4" AutoGenerateColumns="False" CanUserAddRows="false" ColumnHeaderStyle="{StaticResource DGridCentAl}" CellStyle="{StaticResource DGCell}"
                       Background="white" HeadersVisibility="Column" RowHeight="22" SelectionChanged="GroupsDG_SelectionChanged">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn MinWidth="24" MaxWidth="24" CellStyle="{StaticResource DGCellAddEditDelete}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Checked="DancesChB_Checked" Unchecked="DancesChB_Unchecked" HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.3" />
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Танец" Binding="{Binding Title}" Width="130" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Сокращённое обозначение" Binding="{Binding ShortName}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Grid.Row="5" Text="*Состав группы" VerticalAlignment="Center"/>
            <DataGrid x:Name="PairsDG" Grid.Row="6" AutoGenerateColumns="False" CanUserAddRows="false" ColumnHeaderStyle="{StaticResource DGridCentAl}" CellStyle="{StaticResource DGCell}"
                      Background="white" HeadersVisibility="Column" IsReadOnly="True" RowHeight="40">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTemplateColumn MinWidth="24" MaxWidth="24" CellStyle="{StaticResource DGCellAddEditDelete}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Path=IsSelected, UpdateSourceTrigger=PropertyChanged}" Checked="PairsChB_Checked" Unchecked="PairsChB_Unchecked" HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.3" />
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="№" Binding="{Binding Number}" MinWidth="30" MaxWidth="30"/>

                    <DataGridTemplateColumn Width="120" MaxWidth="120" Header="Фамилия">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding MaleSurname}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                    <TextBlock FontSize="14" Text="{Binding FemaleSurname}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="100" MaxWidth="100" Header="Имя">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding MaleName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                    <TextBlock FontSize="14" Text="{Binding FemaleName}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="120" MaxWidth="120" Header="Отчество">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding MalePatronymic}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                    <TextBlock FontSize="14" Text="{Binding FemalePatronymic}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Width="*" Header="Дата рождения">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock FontSize="14" Text="{Binding MaleBirthday}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                    <TextBlock FontSize="14" Text="{Binding FemaleBirthday}" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0 5 0 0" HorizontalAlignment="Center">
                <Button Name="BeginningBtn" Style="{StaticResource BaseButton}" Width="30" Click="BeginningBtn_Click">
                    <Image Source="/Images/Beginning.png" VerticalAlignment="Center" Width="20" Height="20"/>
                </Button>

                <Button Name="BackBtn" Style="{StaticResource BaseButton}" Width="30" Click="BackBtn_Click" Margin="8 0 0 0">
                    <Image Source="/Images/Back.png" VerticalAlignment="Center" Width="20" Height="20"/>
                </Button>

                <Label x:Name="NumberOfRecords" FontSize="12" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Height="30" Width="60" VerticalContentAlignment="Center" VerticalAlignment="Bottom"/>

                <Button Name="NextBtn" Style="{StaticResource BaseButton}" Width="30" Click="NextBtn_Click" Margin="8 0 0 0">
                    <Image Source="/Images/Next.png" VerticalAlignment="Center" Width="20" Height="20"/>
                </Button>

                <Button Name="EndBtn" Style="{StaticResource BaseButton}" Width="30" Click="EndBtn_Click" Margin="8 0 0 0">
                    <Image Source="/Images/End.png" VerticalAlignment="Center" Width="20" Height="20"/>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="8" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 10">
                <Button Style="{StaticResource SaveButton}" Click="Save_Click"/>
                <Button Style="{StaticResource CancelButton}" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>