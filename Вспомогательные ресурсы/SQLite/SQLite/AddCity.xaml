<Window x:Class="SQLite.AddCity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite"
        mc:Ignorable="d"
        Title="AddCity" Height="300" Width="250" WindowStartupLocation="CenterScreen">
    <Grid x:Name="AddEditGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Height="30" x:Name="CityTB"/>
        <ComboBox Grid.Row="1" Height="30" x:Name="CountryCB" DisplayMemberPath="Title"/>
        <Button Grid.Row="2" Click="Add_Click" Content="Добавить"/>
    </Grid>
</Window>
